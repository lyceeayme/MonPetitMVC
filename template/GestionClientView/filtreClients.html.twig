{%  extends "layout.html.twig" %}
{% import '/import/elements.html.twig' as elements %}

{%  block contenu %}
    <div class ="container">
        <h2>Recherche selon critères</h2>
        <form action="index.php?c=GestionClient&a=rechercheClients" method="post">
            <div class="form-group">
                {{ elements.list("titreCli",titres, "Titre", "titres") }}
                {{ elements.list("villeCli",villes, "Ville", "villes") }}
                {{ elements.list("cpCli",cps, "Code postal", "cps") }}
                <button type="submit" class="btn btn-default">Voir</button>
        </form>
    </div>
    <div class="container">
        {% if criteres %}
            <h4> Critères :
                {% for critere in criteres %}
                    {{ critere }} -
                {% endfor %}
            </h4>
            {% if clients %}
                {{ include('/blocks/arrayClients.html.twig') }}
            {% else %}
                <h5> Aucun client trouvé pour ces critères</h5>
            {% endif %}
        {% endif %}
    {% endblock %}
    
    {% block footer %}
        {{ parent() }}
        <script type="text/javascript" src="assets/js/functions.js"></script>
    {% endblock %}